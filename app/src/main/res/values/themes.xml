<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme -->
    <style name="Theme.BLEJetpackCompose" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set status bar to transparent to show content underneath -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Light icons for dark theme -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Ensure system bars are respected for padding -->
        <item name="android:fitsSystemWindows">true</item>
        <!-- Support edge-to-edge with proper padding for notches/cutouts -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>